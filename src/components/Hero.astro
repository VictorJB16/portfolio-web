const personalImageAlt = "Victor Bustos"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="https://scontent.fsyq6-1.fna.fbcdn.net/v/t1.6435-9/98205067_3064318760304440_1154163823897214976_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=cc71e4&_nc_ohc=Poh2tyQnW98Q7kNvwHK5XYQ&_nc_oc=Adl1IvP5zvhBxi6PduQaGXNlyciF1v37Jbb2JJHWGnRgj50Kop7vdTFO9ia25viT4x8&_nc_zt=23&_nc_ht=scontent.fsyq6-1.fna&_nc_gid=W3D4v6fkJOqmB-zEVYrLow&oh=00_AfHJA79uWagp5xy-dsj8BzQV_xpOoCFKOsCC46Lq6mVzDg&oe=682E534D"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/victor-bustos16"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
